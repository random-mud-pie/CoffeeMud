<QUEST ID="all_quests" SELECT="Any-1" merge=true  requires="template=$">
<!--  gets automatically filled in by whatever quest xmls end up loading -->
</QUEST>

<string id="quest_template" define="quest_template" select="any-1">
	<string condition="$template=''"                                                     ></string>
	<string condition="$template!='' and $template!='random'"                            >$template</string>
	<string condition="$template='random' and $avoidscans!='YES'"                        >normal_capture1</string>
	<string condition="$template='random'"                                               >normal_capture2</string>
	<string condition="$template='random' and $avoidscans!='YES'"                        >normal_capture3</string>
	<string condition="$template='random'"                                               >normal_capture4</string>
	<string condition="$template='random' and $avoidscans!='YES'"                        >normal_collect1</string>
	<string condition="$template='random'"                                               >normal_collect2</string>
	<string condition="$template='random' and $avoidscans!='YES'"                        >normal_delivery1</string>
	<string condition="$template='random' and $avoidscans!='YES'"                        >normal_delivery2</string>
	<string condition="$template='random' and $avoidscans!='YES'"                        >normal_killer1</string>
	<string condition="$template='random' and $avoidscans!='YES'"                        >normal_travel1</string>
	<string condition="$template='random' and $avoidscans!='YES'"                        >normal_travel2</string>
 <!--  
     TODO: add normal_capture1_1 for capturing single targets
     TODO: add normal_capture1_2 for capturing just any old targets, same names not required, so dialog would be very weird
 -->
</string>

<STRING ID="avoidscans" define="avoidscans">NO</STRING>

<STRING load="/resources/quests/random/normal_capture1.xml" CONDITION="$quest_template='normal_capture1'"/>
<STRING load="/resources/quests/random/normal_capture2.xml" CONDITION="$quest_template='normal_capture2'"/>
<STRING load="/resources/quests/random/normal_capture3.xml" CONDITION="$quest_template='normal_capture3'"/>
<STRING load="/resources/quests/random/normal_capture4.xml" CONDITION="$quest_template='normal_capture4'"/>
<STRING load="/resources/quests/random/normal_collect1.xml" CONDITION="$quest_template='normal_collect1'"/>
<STRING load="/resources/quests/random/normal_collect2.xml" CONDITION="$quest_template='normal_collect2'"/>
<STRING load="/resources/quests/random/normal_delivery1.xml" CONDITION="$quest_template='normal_delivery1'"/>
<STRING load="/resources/quests/random/normal_delivery2.xml" CONDITION="$quest_template='normal_delivery2'"/>
<STRING load="/resources/quests/random/normal_killer1.xml" CONDITION="$quest_template='normal_killer1'"/>
<STRING load="/resources/quests/random/normal_travel1.xml" CONDITION="$quest_template='normal_travel1'"/>
<STRING load="/resources/quests/random/normal_travel2.xml" CONDITION="$quest_template='normal_travel2'"/>
